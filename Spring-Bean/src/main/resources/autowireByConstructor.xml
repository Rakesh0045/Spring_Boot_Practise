<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="specificationBean" class="AutoWiringByConstructor.Specification">
        <property name="processor" value="intel core i7"/>
        <property name="modelName" value="Samsung Galaxy Book 4"/>
    </bean>

    <bean id="laptopBean" class="AutoWiringByConstructor.Laptop" autowire="constructor"/>


</beans>